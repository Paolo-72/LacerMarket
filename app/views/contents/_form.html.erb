<%= form_with(model: content,html: { multipart: true }) do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label class="grey-text">Carica il contenuto digitale che vuoi vendere (formati supportati: PowerPoint, Excel, Word, PDF, Immagini e MP3)</label>
    <br>
    <%= form.file_field :allegato %>
  </div>

  <br>

  <div>
    <%= form.label :titolo, style: "display: block" %>
    <%= form.text_field :titolo %>
  </div>

  <div>
    <%= form.label :descrizione, style: "display: block" %>
    <%= form.text_area :descrizione,class: "materialize-textarea" %>
  </div>

  <div>
    <%= form.label :prezzo, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <label class="grey-text">Carica un'immagine da utilizzare come cover per il tuo contenuto</label>
    <br>
    <%= form.file_field :cover %>
  </div>
  <br>
  <div>
    <%= form.submit 'SALVA CONTENUTO', class:"btn btn-form" %>
  </div>
  <br>
<% end %>

<!--File parziale header-->
<header class = "navbar-fixed">
  <nav class = "blue-grey darken-2">
    <div class="container nav-wrapper">
      <!-- inserisco embedded ruby che ha lo stesso effetto del tag <a> e richiamo la pagina di about-->
      <!--esempio:<p><a href="https://lacerba.io"> Clicca qui</a> per saperne di pi√π </p>-->
      <%= link_to '<i class =" no-float far fa-save"> LacerMarket</i>'.html_safe, root_path, class: "brand-logo" %>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><%= link_to "Vendi contenuto", new_content_path %></li>
        <% if user_signed_in?%>
          <!-- Dropdown Structure -->
          <ul id="dropdown1" class="dropdown-content">
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <li><%= link_to "Impostazioni", edit_user_registration_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger" href="#!" data-target="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Registrazione", new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

<!--Barra Mobile-->
<ul class="sidenav" id="mobile-demo">
  <li><%= link_to "Vendi contenuto", new_content_path %></li>
    <% if user_signed_in?%>
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <li><%= link_to "Impostazioni", edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Log In", new_user_session_path %></li>
      <li><%= link_to "Registrazione", new_user_registration_path %></li>
    <% end %>
</ul>
